<% layout('layout/boilerplate') -%>

<head>
  <style>
    #form {
        width: 30vw;
        max-width: 400px; /* Set a maximum width for larger screens */
        margin: 40px auto;
        border: 1px solid lightgray;
        background-color: black;
        color: white;
        padding: 20px;
        border-radius: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    #signIn {
        color: white;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 4em;
        margin-bottom: 20px;
    }

    .form-label {
        font-size: 0.9em;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        box-sizing: border-box;
    }

    #button {
        width: 100%;
        padding: 12px;
        margin: 10px 0;
    }
    #google{
      display: flex;
    }
    @media (max-width: 1029px) {
        #form {
            width: 80vw;
            padding: 15px;
        }

        #signIn {
            font-size: 3.5em;
        }
    }
</style>
</head>


<form action="/login" method="post" id="form">
    <div id="signIn">LOG IN </div>

    <div class="mb-3">
      <label for="exampleInputUsername" class="form-label">Username</label>
      <input type="text" class="form-control" id="exampleInputUsername" name="username" placeholder="username">
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Email address</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" placeholder="abcd@gmail.com">
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1" name="password" placeholder="password">
    </div>
    
    <div>
        New to NexusMart?
        <a href="/register">Register</a>
    </div>
    <button style="margin-left: 135px;width: 90px;" type="submit" class="btn btn-success" id="button">Login</button>

    <br>
    <div style="width: 100%;text-align: center;font-size: 25px;" >or</div>
    

    
    <a style="text-align: center;width: 100%;margin-left:60px;font-size: 26px;" href="/oauth2/redirect/google">Login via Google       <i class="fa-brands fa-xl fa-google" style="color: white;"></i></a>
  
    
  </form>