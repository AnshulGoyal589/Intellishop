<% layout('layout/boilerplate') -%>

<head>
    <style>
        #form{
            width:30vw;
            margin:40px auto;
            border:1px solid lightgray;
            /* background-color: whitesmoke; */
            background-color: black;
            /* color: black; */
            color: white;
            padding:0px 25px 25px 25px;
            border-radius: 20px;
        }
        #button{
            margin-top:20px;
        }
        #signIn{
            /* color:black; */
            color: white;
            width:fit-content;
            font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 64px;
            margin-bottom:20px ;
        }
    </style>
</head>


<form action="/login" method="post" id="form">
    <div id="signIn">LOG IN </div>

    <div class="mb-3">
      <label for="exampleInputUsername" class="form-label">Username</label>
      <input type="text" class="form-control" id="exampleInputUsername" name="username" placeholder="username">
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Email address</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" placeholder="abcd@gmail.com">
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1" name="password" placeholder="password">
    </div>
    <div>
    <div>
        New to NexusMart?
        <a href="/register">Register</a>
    </div>
    <button style="margin-left: 160px;width: 90px;" type="submit" class="btn btn-success" id="button">Login</button>

    <br>
    <div style="width: 100%;text-align: center;font-size: 25px;" >or</div>
    

    <a style="text-align: center;width: 100%;margin-left: 100px;font-size: 26px;" href="/oauth2/redirect/google">Login via Google       <i class="fa-brands fa-2xl fa-google" style="color: white;"></i></a>

    
  </form>